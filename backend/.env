# 项目配置
API_V1_STR=/api/v1
PROJECT_NAME=Text Archive Assistant
HOST=0.0.0.0
PORT=8000
WORKERS=1

# 跨域配置
# allow_origins=["http://localhost:5173", "http://127.0.0.1:5173"]

# 日志配置
LOG_NAME=app
LOG_LEVEL=20
LOG_WHEN=D
LOG_BACKUP_COUNT=5

# 数据库配置
DATABASE_URL=sqlite:///./text_archive.db

# JWT配置
SECRET_KEY=your-secret-key-change-in-production-please-use-a-strong-random-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# 文件上传配置
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# OCR配置
OCR_LANG=ch
OCR_USE_GPU=false

# LLM配置
LLM_API_URL=http://localhost:3001/v1/chat/completions
LLM_MODEL=Qwen/Qwen2-VL-7B-Instruct
LLM_ENABLED=true

# Redis配置(可选)
# REDIS_URL=redis://localhost:6379/0
